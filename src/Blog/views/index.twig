{% extends "layout.twig" %}

{% block title 'Mes article' %}

{% block body %}
<h1>Bienvenue sur le blog</h1>

<div class="row row-cols-1 row-cols-md-4 g-4">
	{% for post in posts %}
	<div class="col">
		<div class="card">
			<div class="card-header">
				<h2>
					<a href="{{ path('blog.show', {slug: post.slug, id: post.id}) }}">{{ post.name }}</a>
				</h2>
			</div>
			<div class="card-body">
				<p class="card-text">{{ post.content | excerpt | nl2br }}</p>
				<p class="text-muted">{{ post.created_at | ago }}</p>
			</div>
			<div class="card-footer">
				<button class="btn btn-primary">Voir l'article</button>
			</div>
		</div>
	</div>
	{% endfor %}
</div>

{{ paginate(posts, 'blog.index') }}
{% endblock %}