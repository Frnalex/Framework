<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% block title "Titre par défaut" %}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi" crossorigin="anonymous" />
</head>

<body>
    <nav class="navbar navbar-expand-lg bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Framework PHP</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse d-flex justify-content-between" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link {{ is_subpath('blog.admin.index') ? 'active' }}"
                            href="{{ path('blog.index') }}">Blog</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link {{ is_subpath('blog.admin.index') ? 'active' }}"
                            href="{{ path('contact') }}">Nous contacter</a>
                    </li>
                </ul>
                <div class="navbar-nav">
                    {% if current_user() %}
                    <span class="navbar-text">Connecté en tant que {{ current_user().username }}</span>
                    <form class="nav-item" action="{{ path('auth.logout') }}" method="POST">
                        {{ csrf_input() }}
                        <button class="nav-link active">Se déconnecter</button>
                    </form>
                    {% else %}
                    <div class="nav-item">
                        <a class="nav-link active" href="{{ path('auth.login') }}">Se connecter</a>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </nav>

    <div class="container">
        {% block body %}{% endblock %}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
        crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/timeago.js/3.0.2/timeago.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/timeago.js/3.0.2/timeago.locales.min.js"></script>
    <script>
        timeago().render(document.querySelectorAll('.timeago'), 'fr')
    </script>
</body>

</html>